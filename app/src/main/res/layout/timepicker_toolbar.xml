<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/picker_toolbar_height"
    android:background="@drawable/bg_round_12_top_color_f8f8f8"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingStart="@dimen/dp26"
        android:paddingEnd="@dimen/dp26"
        android:text="@string/cancel"
        android:textColor="@color/color_b5b9c4"
        android:textSize="@dimen/sp14" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_sure"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingStart="@dimen/dp26"
        android:paddingEnd="@dimen/dp26"
        android:text="@string/ensure"
        android:textColor="@color/color_main"
        android:textSize="@dimen/sp14" />

</LinearLayout>