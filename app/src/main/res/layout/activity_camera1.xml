<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <SurfaceView
        android:id="@+id/shotSvPreview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/shotRlFocusBg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:id="@+id/shotRlFocusIcon"
            android:layout_width="@dimen/dp75"
            android:layout_height="@dimen/dp75"
            android:visibility="gone"
            android:background="@drawable/custom_path_focus_icon"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/switchCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/componentActionBar"
        android:background="#16000000"
        android:padding="@dimen/dp6"
        android:text="后置摄像"
        android:textColor="@color/color_ffffff"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/switchFlash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/switchCamera"
        android:background="#32000000"
        android:padding="@dimen/dp6"
        android:text="闪光灯"
        android:textColor="@color/color_ffffff"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/doShot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/switchFlash"
        android:background="#16000000"
        android:padding="@dimen/dp6"
        android:text="执行拍照"
        android:textColor="@color/color_ffffff"
        android:textSize="14sp" />

    <include
        android:id="@+id/componentActionBar"
        layout="@layout/component_action_bar_000000_alpha_30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>